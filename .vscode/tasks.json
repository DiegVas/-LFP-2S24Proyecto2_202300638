{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ejecutar Fortran",
      "type": "shell",
      //"command": "./analyzerLex.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/Backend"
      },
      "dependsOn": "Compiler"
    },
    {
      "label": "Compiler",
      "type": "shell",
      "command": "gfortran",
      "args": [
        "-o",
        "analyzerLex",
        "analyzerLex.f90",
        "tokens.o",
        "analyzersintac.o",
        "htmlanalyzer.o",
        "TypeControls.o"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/Backend"
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": "CompilerMods"
    },
    {
      "label": "CompilerMods",
      "type": "shell",
      "command": "gfortran",
      "args": ["-c", "analyzersintac.f90", "tokens.f90", "htmlanalyzer.f90", "TypeControls.f90"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/Backend"
      },
      "dependsOn": "clean"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "cls"
    }
  ]
}
